<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="CakePromoServiceLib.Main">
      <host>
        <baseAddresses>
        <add baseAddress="http://localhost:8090/CakePromoService/"/>
      </baseAddresses>
      </host>
    </service>
  </services>
    <bindings>
      <basicHttpBinding>
        <binding openTimeout="00:00:30"></binding>
      </basicHttpBinding>    
    </bindings>
  <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="false"/>
        <dataContractSerializer maxItemsInObjectGraph="100" />        
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
<connectionStrings>
    <add connectionString="server=.;database=CakePromo;Trusted_Connection=True" name="primaryConn" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <system.diagnostics>
    <sources>
      <source name="System.ServiceModel"
              switchValue="Information, ActivityTracing"
              propagateActivity="true">
        <listeners>
          <add name="traceListener"
              type="System.Diagnostics.XmlWriterTraceListener"
              initializeData= "c:\log\Traces.svclog" />
        </listeners>
      </source>
    </sources>
  </system.diagnostics>
</configuration>