@{
    ViewBag.Title = "Index";
}
<script>
    $(document).ready(function () {

        var lat = 35.13391;
        var lng = 33.35315;

        $('#map_canvas').gmap({ center: lat + "," + lng }).bind('init', function (evt, map) {
            $('#map_canvas').gmap('option', 'zoom', 14),
            $('#map_canvas').gmap('addMarker', { /*id:'m_1',*/title: 'Use the +/- on the left to zoom', position: lat + "," + lng, bounds: false })
        });

        $('#sendMsg').validate({
            rules: {
                name: {
                    required: true                    
                },
                email: {
                    required: true,
                    email: true
                },
                message: {
                    required: true
                }
            }
        });//end validate
    })//end ready
</script>

