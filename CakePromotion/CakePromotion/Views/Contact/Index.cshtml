<h2>Send your question/feedback</h2>
@using (Html.BeginForm("SendMessage", "Contact", FormMethod.Post, new { id = "sendMsg" }))
{
    <div id="contactContainer">
        <div id="contactDetails">
            <div id="field">
                <div id="label"><label for="name">Name</label></div>
                <div id="text">
                    <input type="text" name="name" id="name" /></div>
                <div style="clear: both"></div>
            </div>
            <div id="field">
                <div id="label"><label for="email">Email</label></div>
                <div id="text">
                    <input type="text" name="email" id="email" /></div>
                <div style="clear: both"></div>
            </div>
            <div id="field">
                <div id="label"><label for="message">Message</label></div>
                <div id="text">
                    <textarea cols="25" rows="5" id="message" name="message"></textarea></div>
                <div style="clear: both"></div>
            </div>
            <div id="field">
                <div id="label">&nbsp;</div>
                <div id="text">
                    <input type="submit" name="Send" title="Send" value="Send" /><input type="reset" value="Cancel" /></div>
                <div style="clear: both"></div>
            </div>
        </div>
    </div>
    <div style="clear: both"></div>
}